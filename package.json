{
  "name": "eslintcc",
  "version": "0.6.0",
  "homepage": "https://eslintcc.github.io",
  "description": "ESLintCC is a ECMAScript/JavaScript tool that computes complexity of code by using ESLint",
  "keywords": [
    "eslint",
    "javascript",
    "complexity",
    "linter",
    "static-code-analysis"
  ],
  "repository": "github:eslintcc/eslintcc",
  "license": "MIT",
  "main": "./source/complexity.js",
  "bin": {
    "eslintcc": "eslintcc"
  },
  "files": [
    "source",
    "eslintcc"
  ],
  "dependencies": {
    "eslint": "7.19.0"
  },
  "devDependencies": {
    "semver": "7.3.4",
    "nyc": "15.1.0",
    "coveralls": "3.1.0",
    "rollup": "^2.38.5",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@nodutilus/test": "^0.2.1",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-private-methods": "^7.12.13",
    "typescript": "^4.1.3",
    "@typescript-eslint/parser": "^4.14.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2"
  },
  "scripts": {
    "build": "npx rollup --config",
    "test": "node bin/test",
    "coverage": "node bin/coverage",
    "coverage-all": "node bin/coverage-all"
  },
  "nyc": {
    "all": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "exclude": [
      "bin",
      "build",
      "coverage",
      "test",
      "rollup.config.js",
      "source/lib/args.js"
    ]
  }
}