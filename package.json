{
  "name": "eslintcc",
  "version": "0.1.0",
  "homepage": "https://github.com/eslintcc/eslintcc",
  "description": "ESLintCC is a ECMAScript/JavaScript tool that computes complexity of code by using ESLint",
  "keywords": [
    "eslint",
    "javascript",
    "complexity",
    "linter",
    "static-code-analysis"
  ],
  "repository": "github:eslintcc/eslintcc",
  "license": "MIT",
  "main": "./source/complexity.js",
  "bin": {
    "eslintcc": "eslintcc"
  },
  "files": [
    "source",
    "eslintcc"
  ],
  "dependencies": {
    "eslint": "5.15.1",
    "@ndk/env": "^0.0.3"
  },
  "devDependencies": {
    "@nd-toolkit/ndk-project": "github:nd-toolkit/ndk-project",
    "semver": "5.6.0",
    "@ndk/test": "^0.0.4"
  },
  "scripts": {
    "test": "node test",
    "coverage": "node bin/coverage",
    "coverage-all": "node bin/coverage-all"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "bin",
      "coverage",
      "test"
    ]
  }
}